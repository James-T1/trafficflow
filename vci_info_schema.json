
{
    "vehicle": {
        "description": "Vehicle build information, such as make, model, year.",
        "type": "object",
        "required": "false",
        "content": {
            "make": {
                "description": "The vehicle brand name.",
                "type": "string",
                "required": false
            },
            "model": {
                "description": "The vehicle model name.",
                "type": "string",
                "required": false
            },
            "year": {
                "description": "The vehicle year.",
                "type": "number",
                "required": false
            },
            "vin": {
                "description": "The VIN",
                "type": "string",
                "required": false
            },
            "wheel-base": {
                "description": "The distance between the center of the front and rear axles.",
                "type": "number",
                "unit": "length",
                "required": false
            },
            "curb-weight": {
                "description": "The weight of the vehicle.",
                "type": "number",
                "unit": "weight",
                "required": false
            },
            "tire-circumference": {
                "description": "The circumference of the tires.",
                "type": "number",
                "unit": "length",
                "required": false
            }
        }
    },
    "state": {
        "description": "The current vehicle state.",
        "type": "object",
        "required": true,
        "content": {
            "dynamics": {
                "description": "The vehicle's dynamics data.",
                "type": "object",
                "required": true,
                "content": {
                    "speed": {
                        "description": "The vehicle's current speed.",
                        "type": "number",
                        "required": true,
                        "unit": "speed"
                    },
                    "acceleration": {
                        "description": "The vehicle's accelerometetr readsings.",
                        "required": "false",
                        "type": "object",
                        "content": {
                            "lateral": {
                                "description": "Lateral acceleration of vehicle.",
                                "required": true,
                                "type": "number",
                                "unit": "acceleration"
                            },
                            "longitudinal": {
                                "description": "Longitudinal acceleration of vehicle.",
                                "required": true,
                                "type": "number",
                                "unit": "acceleration"
                            }
                        }
                    }

                }
            },
            "powertrain": {
                "description": "The vehicle's powertrain information.",
                "required": false,
                "type": "object",
                "content": {
                    "torque": {
                        "description": "The engine's torque information.",
                        "required": false,
                        "type": "object",
                        "content": {
                            "minimum": {
                                "description": "The minimum engine torque.",
                                "required": true,
                                "type": "number",
                                "unit": "torque"
                            },
                            "maximum": {
                                "description": "The maximum engine torque.",
                                "required": true,
                                "type": "number",
                                "unit": "torque"
                            },
                            "effective": {
                                "description": "The effective engine torque.",
                                "required": true,
                                "type": "number",
                                "unit": "torque"
                            }
                        }
                    },
                    "rpm": {
                        "description": "The engine's revolutions per minute.",
                        "required": false,
                        "type": "number"
                    },
                    "starter-running": {
                        "description": "Indicates if the starter is running.",
                        "required": false,
                        "type": "boolean"
                    },
                    "throttle-position": {
                        "description": "The driver's pressed throttle position, as a percentage from 0-100.",
                        "required": false,
                        "type": "number",
                        "unit": "percentage"
                    }
                }
            },
            "transmission": {
                "description": "Information about the transmission.",
                "required": false,
                "content": {
                    "gear-selection": {
                        "description": "The driver's gear selection.",
                        "required": false,
                        "content": [ "park", "reverse", "neutral", "drive", "unknown" ]
                    }
                }
            },
            "occupant-restraint": {
                "description": "Information about the state of the occuptant restraint system.",
                "required": "false",
                "content": {
                    "seatbelts": {
                        "description": "Seatbelt status.",
                        "required": false,
                        "content": {
                            "driver": {
                                "description": "The seatbelt status.",
                                "required": true,
                                "content": ["unknown", "unbuckled", "buckled"]
                            },
                            "passenger": {
                                "description": "The seatbelt status.",
                                "required": false,
                                "content": ["unknown", "unbuckled", "buckled"]
                            }
                        }                       
                    }
                }
            },
            "doors": {
                "description": "Information about the state of the doors.",
                "required": "false",
                "content": {
                    "driver": {
                        "description": "Door status",
                        "required": true,
                        "content": [ "ajar", "closed" ]             
                    },
                    "passenger": {
                        "description": "Door status",
                        "required": false,
                        "content": [ "ajar", "closed" ]             
                    },
                    "left-rear": {
                        "description": "Door status",
                        "required": false,
                        "content": [ "ajar", "closed" ]             
                    },
                    "right-rear": {
                        "description": "Door status",
                        "required": false,
                        "content": [ "ajar", "closed" ]             
                    },
                    "trunk-liftgate": {
                        "description": "Door status",
                        "required": false,
                        "content": [ "ajar", "closed" ]             
                    }
                }
            },
            "steering": {
                "description": "Information about the vehicle's steering system.",
                "required": false,
                "content": {
                    "wheel-angle": {
                        "description": "The steering wheel angle, negative indicates counterclockwise.",
                        "required": true,
                        "type": "number",
                        "unit": "degrees"
                    },
                    "input-torque": {
                        "description": "The amount of torque the driver is applying to the steering wheel.",
                        "required": false,
                        "type": "number",
                        "unit": "torque"
                    },
                    "assist-torque": {
                        "description": "The amount of torque the power steering system is applying to assist the driver.",
                        "required": false,
                        "type": "number",
                        "unit": "torque"
                    }
                }
            },
            "driver-acutation": {
                "description": "Information about the driver's actuations.",
                "required": false,
                "content": {
                    "turn-signal": {
                        "description": "The turn signal selection.",
                        "required": false,
                        "content": [ "off", "left", "right", "hazard" ]
                    },
                    "horn": {
                        "description": "The horn.",
                        "required": false,
                        "content": [ "off", "on" ]
                    },
                    "headlights": {
                        "description": "The headlight selection.",
                        "required": false,
                        "content": [ "auto", "on", "off", "parking" ]
                    },
                    "foglights": {
                        "description": "The foglight selection.",
                        "required": false,
                        "content": [ "on", "off" ]
                    },
                    "highbeams": {
                        "description": "The highbeams selection.",
                        "required": false,
                        "content": [ "off", "active", "momentary" ]
                    }
                }
            }
        }
    }
}