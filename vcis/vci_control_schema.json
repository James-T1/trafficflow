
{
    "motion": {
        "description": "The actuators which control the vehicle's movement.",
        "type": "object",
        "required": "false",
        "content": {
            "lateral": {
                "description": "The definition of lateral control actuator.",
                "type": "object",
                "required": "false",
                "content": {
                    "magnitude": {
                        "description": "A dimensionless magnitude value, a percentage -100 to 100 (negative being counterclockwise).  If lateral control is supported at all, this method must always be supported.",
                        "type": "number",
                        "unit": "percentage",
                        "required": true
                    },
                    "torque": {
                        "description": "Lateral control using a torque value. Negative values are counterclockwise.",
                        "type": "number",
                        "unit": "torque",
                        "required": false,
                        "content": {
                            "miniumum": {
                                "description": "The minimum torque that can be applied.",
                                "required": true,
                                "type": "number",
                                "unit": "torque"
                            },
                            "maximum": {
                                "description": "The maximum torque that can be applied.",
                                "required": true,
                                "type": "number",
                                "unit": "torque"
                            }
                        }
                    }
                }
            },
